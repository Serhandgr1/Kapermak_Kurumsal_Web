@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer localizer
@model ContactDTO
<script src="~/assets/js/jquery-3.4.1.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<header class="">

    <div class="header_bottom" style="box-shadow: 0px 0px 30px black; background-color:#e8e8e8;">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg custom_nav-container ">
                <a class="navbar-brand" href="@Url.Action("Index","Home")">
                    <img src="~/assets/images/logo.png" alt="">
                </a>


                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class=""> </span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav  ">
                        <li class="nav-item  ">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">@localizer["Home"]<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link" asp-controller="Services" asp-action="Index">@localizer["Hizmetler"]</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link" asp-controller="About" asp-action="Index">@localizer["Hakkımızda"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Products" asp-action="Index">@localizer["Ürünler"]</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" asp-controller="Contact" asp-action="Index">@localizer["İletişim"]</a>
                        </li>
                        <partial name="_SelectLanguage" />

                    </ul>

                </div>
            </nav>
        </div>
    </div>
</header>
<section class="contact_section layout_padding">
    <div class="container-fluid">
        <div class="col-lg-4 col-md-5 offset-md-1">
            <div class="heading_container">
                <h2>
                    @localizer["İletişim"]
                </h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-5 offset-md-1">
                <div class="form_container">
                    <form method="post" asp-action="PostMail" asp-controller="Contact">
                        <div>
                            <input asp-for="Name" type="text" placeholder="@localizer["Adınız"]" />
                        </div>
                        <div>
                            <input asp-for=PhoneNumber type="text" placeholder="@localizer["Numaranız"]" />
                        </div>
                        <div>
                            <input asp-for=Message type="email" placeholder="@localizer["E-Posta"]" />
                        </div>
                        <div>
                            <input asp-for=Email type="text" class="message-box" placeholder="@localizer["Mesajınız"]" />
                        </div>
                        <div class="btn_box">
                            <button>
                                @localizer["Gönder"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-7 col-md-6 px-0">
                <div class="map_container">
                    <div class="map">
                        <div id="googleMap"></div>
                    </div>
                </div>
            </div>
            <input style="display:none;" id="bag" value="@ViewBag.Post" />
        </div>
    </div>
</section>
<script>
    var data = document.getElementById("bag").value;
    if (data == "Başarılı") {
        swal("Mesajınızı Aldık! Sizlere kısa süre içerisinde dönüş sağlayacağız", {
            icon: "success",
            button: "Tamam" ,
        });
    } else if (data == "Başarısız") {
        swal("Mesajınızı iletirken bir hata ile karşılaştık lütfen bizlere iletişim bilgilerimiz ile ulaşın", {
            icon: "error",
            button: "Tamam",
        });
    }
   
</script>