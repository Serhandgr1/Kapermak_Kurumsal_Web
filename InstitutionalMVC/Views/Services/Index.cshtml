@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer localizer
@model List<ServicesDTO>
<header class="">

    <div class="header_bottom" style="box-shadow: 0px 0px 30px black; background-color:#e8e8e8;">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg custom_nav-container ">
                <a class="navbar-brand" href="@Url.Action("Index","Home")">
                    <img src="~/assets/images/logo.png" alt="">
                </a>


                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class=""> </span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav  ">
                        <li class="nav-item  ">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">@localizer["Home"]<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" asp-controller="Services" asp-action="Index">@localizer["Hizmetler"]</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link" asp-controller="About" asp-action="Index">@localizer["Hakkımızda"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Products" asp-action="Index">@localizer["Ürünler"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Contact" asp-action="Index">@localizer["İletişim"]</a>
                        </li>
                        <partial name="_SelectLanguage" />

                    </ul>

                </div>
            </nav>
        </div>
    </div>
</header>

<section class="service_section layout_padding">
    <div class="service_container">
        <div class="container ">
            <div class="heading_container">
                <h2>
                    @localizer["Hizmetler"]
                </h2>
            </div>
            <div class="row">
                @foreach(var item in Model)
                {
                    <div class="col-md-6 col-lg-3" id=@item.Id>
                        <div class="box ">
                            <div class="img-box">
                                <img src="~/assets/images/@item.ServiceImage" alt="">
                            </div>
                            <div class="detail-box">
                                <h5>
                                    @localizer[item.ServiceTitle]
                                </h5>
                                <p>
                                    @localizer[item.ServiceDetail]
                                </p>

                            </div>
                        </div>
                    </div>
                }
            </div>            
        </div>
    </div>
</section>