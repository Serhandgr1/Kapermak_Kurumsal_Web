@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer localizer
@model ProductDTO

<header class="">
    <div class="header_bottom" style="box-shadow: 0px 0px  30px black;">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg custom_nav-container ">
                <a class="navbar-brand" href="@Url.Action("Index","Home")">
                    <img src="~/assets/images/logo.png" alt="">
                </a>


                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class=""> </span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav  ">
                        <li class="nav-item  ">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">@localizer["Home"]<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link" asp-controller="Services" asp-action="Index">@localizer["Hizmetler"]</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link" asp-controller="About" asp-action="Index">@localizer["Hakkımızda"]</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" asp-controller="Products" asp-action="Index">@localizer["Ürünler"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Contact" asp-action="Index">@localizer["İletişim"]</a>
                        </li>
                        <partial name="_SelectLanguage" />

                    </ul>

                </div>
            </nav>
        </div>
    </div>
</header>
<section id="product-page">
    <div class="container">
        <h1 class="lg-title" style="margin-top:70px;">@localizer["Ürün Detayları"]</h1>
    </div>
    <div class="product-details">
       
        <div class="product-img" style="max-height:500px;">

            <div class="swiper mySwiper" >
                <div class="swiper-wrapper">
                    @if (!string.IsNullOrEmpty(Model.ProductImage))
                    {
                        <div class="swiper-slide">
                            <img src="~/assets/images/@Model?.ProductImage" />
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.ProductImage2))
                    {
                        <div class="swiper-slide">
                            <img src="~/assets/images/@Model?.ProductImage2" />
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.ProductImage3))
                    {
                        <div class="swiper-slide">
                            <img src="~/assets/images/@Model?.ProductImage3" />
                    </div>
                    }
                </div>

            </div>

            <div class="slider-btns">
                <div class="swiper-button-prev"></div>
                <div class="swiper-button-next"></div>
            </div>
            <div class="img-social-bar">
                <a href="#"><i class="fa-brands fa-facebook-f"></i></a>
                <a href="#"><i class="fa-brands fa-instagram"></i></a>
                <a href="#"><i class="fa-brands fa-twitter"></i></a>
                <a href="#"><i class="fa-brands fa-youtube"></i></a>
            </div>
        </div>
        <!--**Text************************-->
        <div class="product-text">
            <!--category-->
            <h3 class="product-category">
                @if (!string.IsNullOrEmpty(Model.ProductTitle))
                {
                    @localizer[Model.ProductTitle]
                }
            </h3>
            <br />
            <span>
                @if (!string.IsNullOrEmpty(Model.ProductDetail))
                {
                    @localizer[Model.ProductDetail]
                }
            </span>
            <br />
            <p>
                @if (!string.IsNullOrEmpty(Model.ProductSpacial))
                {
                    @localizer[Model.ProductSpacial]
                }
               <br />
           </p>
            <!--size-->
@*            <div class="product-size-container">
                <strong>Select Size:-</strong>
                <div class="product-size">
                    <!--xl-->
                    <input type="checkbox" class="s-checkbox" id="s-xl">
                    <label for="s-xl" class="s-label">XL</label>
                    <!--Small-->
                    <input type="checkbox" class="s-checkbox" id="s-s">
                    <label for="s-s" class="s-label">S</label>
                    <!--Medium-->
                    <input type="checkbox" class="s-checkbox" id="s-m">
                    <label for="s-m" class="s-label">M</label>
                    <!--Large-->
                    <input type="checkbox" class="s-checkbox" id="s-l">
                    <label for="s-l" class="s-label">L</label>
                </div>
            </div>*@

            <!--help-btn-->
            <a href="@Url.Action("Index","Contact")" class="help-btn">Need Any Help?</a>
        </div>
    </div>
</section>